<div class="container" style="margin: 100px auto">

  <div class="row">

    <div class="col-6 offset-3">
      <h4>Agregar una nueva novedad</h4>
      <form
        action="/admin/novedades/agregar"
        method="post"
        enctype="multipart/form-data"
      >
        <div class="py-2"></div>
        <div class="form-group">
          <label for="">Título</label>
          <input
            type="text"
            class="form-control"
            placeholder="Titulo"
            name="titulo"
          />

        </div>
        <div class="py-2"></div>
        <div class="form-group">
          <label for=" ">Subtítulo</label>
          <textarea
            type="text"
            class="form-control"
            placeholder="Subtitulo"
            name="subtitulo"
          >
          </textarea>
        </div>
        <div class="py-2"></div>
        <div class="form-group">
          <label for="">Cuerpo</label>
          <textarea
            type="text"
            class="form-control"
            placeholder="Cuerpo"
            name="cuerpo"
          >
          </textarea>
        </div>
        <div class="py-3"></div>
        <div class="form-group">
          <label>Imagen:
            <input type="file" name="imagen" id="imagen" /></label>
        </div>
        <div class="py-2"></div>
        <button type="submit" class="btn btn-primary">Guardar</button>
      </form>
      {{#if error}}
        <p>{{message}}</p>
      {{/if}}
    </div>
  </div>
</div>