<div class="container" style="margin-top: 70px;">
</div>
  
    

<div class="col-lg-3 col-md-3 col-sm-3  offset-lg-9 offset-md-9 offset-sm-9">
      <p class="text-right">
        <span> Hola {{usuario}}!! </span>
        <a href="/admin/login/logout" class="btn btn-primary">
          Cerrar sesión</a>
      </p>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-5 offset-lg-1">
    <h2>Listado de Novedades</h2>
</div>
</div>
  <div class="row">
    <div class="col-lg-5 offset-lg-1 py-2">
    <a href="/admin/novedades/agregar" class="btn btn-success">Nuevo</a>
  </div>
</div>

<div class="col-2  offset-lg-8 text-right">
     <form class="form-inline" action="/admin/novedades" method="get">
       <input class="form-control" type="search" placeholder="Buscar" aria-label="Search" name="q" {{#if q}} 
       value="{{q}}" {{/if}}>
       <button class="btn btn-secondary my-2 my-sm-0" type="submit">
         <i class="fa fa-search" aria-hidden="true"></i>
       </button>
     </form>
</div>


<div class="row">
    <div class="col-lg-10 offset-lg-1">
    <table class="table">
      <thead>
        <tr class="table-dark">
          <th scope="col">#</th>
          <th scope="col">Título</th>
          <th scope="col">Imagen</th>
          <th scope="col" class="text-right">Acciones</th>
        </tr>
      </thead>
      <tbody>
        {{#each novedades}}
        <tr>
          <th scope="row">{{id}}</th>
          <td>{{titulo}}</td>
          <td>{{{imagen}}}</td>
          <td class="text-right">
            <a href="/admin/novedades/modificar/{{id}} " class="btn btn-secondary"><i
                class="fa fa-pencil"
                aria-hidden="false"
              ></i></a>
            <a href="/admin/novedades/eliminar/{{id}} " class="btn btn-secondary">
              <i class="fa fa-trash-o" aria-hidden="true"></i>
            </a>

          </td>
           {{/each}}
        </tr>
      </tbody>
    </table>
      {{#if is_search}}
      {{#unless novedades.length}}
    No se encontraron resultados para "<b>{{q}}</b>"
      {{/unless}}
      {{/if}}
  </div>
</div>
